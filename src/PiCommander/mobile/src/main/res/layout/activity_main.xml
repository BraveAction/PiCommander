<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".MainActivity"
    android:background="@drawable/background_disable">

    <ImageView
        android:id="@+id/connect_imageview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerInParent="true"
        android:padding="@dimen/connect_icon_padding"
        android:src="@drawable/mq_disconnected"
        android:contentDescription="@android:string/ok"/>

    <GridView
        android:id="@+id/gridview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:columnWidth="@dimen/gridview_column_width"
        android:numColumns="2"
        android:verticalSpacing="@dimen/gridview_verticalSpacing"
        android:horizontalSpacing="@dimen/gridview_horizontalSpacing"
        android:stretchMode="columnWidth"
        android:gravity="center" />

</RelativeLayout>
